<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a Meal</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/photos" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="photo name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="spot" placeholder="spot">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/photos">Back to The Food Jar</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>